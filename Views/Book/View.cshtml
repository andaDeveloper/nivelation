@model PruebaNivelacion.Models.BookModel

@using (Html.BeginForm("View", "Book", FormMethod.Post))

{

    <label class="control-label"> id </label>
    <input type="text" class="form-control" asp-for="Id_libro" readonly />

    <div class="form-group">
        <label class="control-label"> Nombre del libro </label>
        @Html.TextBoxFor(field => field.Nombre_libro, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label class="control-label"> Nombre del autor </label>
        @Html.TextBoxFor(field => field.Autor, new {@class = "form-control"})
    </div>
    <div class="form-group">
        <label class="control-label"> Fecha de lanzamiento </label>
        @Html.TextBoxFor(field => field.Fecha_lanzamiento, new {@class = "form-control", @type = "datetime-local"})
    </div>
    <input type="submit" value="Update" asp-action="Update" asp-controller="Book" />
    <input type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Book" value="Delete" />
    <a asp-action="Books">Volver a la lista</a>
} 